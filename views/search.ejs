<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./layouts/imports') %>
    <title>Real Estate</title>
  </head>
  <body>
    <%- include('./layouts/navbar.ejs') %>
    <div class="container-md">
      <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-5 border my-3 px-3 py-2">
          <!-- Sale or Rent -->
          <nav class="nav nav-tabs nav-fill">
            <a class="nav-link text-dark me-1" href="/sale">Sale</a>
            <a class="nav-link active" href="/rent">Rent</a>
          </nav>
          <!-- Sale or Rent End -->

          <form action="" method="GET">
            <!-- Location -->
            <div class="address my-3">
              <h5>Location</h5>
              <select class="form-select">
                <option selected disabled value="izmir">Select a City</option>
                <option value="izmir">Izmir</option>
              </select>
              <select class="form-select my-2">
                <option selected disabled value="izmir">
                  Select a District
                </option>
                <option value="bornova">Bornova</option>
              </select>
            </div>
            <!-- Location End -->

            <!-- Price -->
            <div class="my-3">
              <h5>Price</h5>
              <div class="d-flex align-items-center">
                <input
                  class="form-control w-50 me-2"
                  max="100000000"
                  type="number"
                  name="lowestprice"
                  placeholder="Lowest"
                />TL
                <input
                  class="form-control w-50 mx-2"
                  max="100000000"
                  type="number"
                  name="highestprice"
                  placeholder="Highest"
                />TL
              </div>
            </div>
            <!-- Price End -->

            <!-- Gross m² -->
            <div class="my-3">
              <h5>Gross m²</h5>
              <div class="d-flex align-items-center">
                <input
                  class="form-control w-50 me-2"
                  max="100000000"
                  type="number"
                  name="lowestmeter"
                  placeholder="Lowest"
                />m²
                <input
                  class="form-control w-50 mx-2"
                  max="100000000"
                  type="number"
                  name="highestmeter"
                  placeholder="Highest"
                />m²
              </div>
            </div>
            <!-- Gross m² End -->

            <div class="d-flex justify-content-between my-3">
              <!-- Number of Rooms -->
              <div>
                <h5>Rooms</h5>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    1+0
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    1+1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    2+1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    3+1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    4+1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    4+2 and above
                  </label>
                </div>
              </div>
              <!-- Number of Rooms End -->

              <!-- Number of Bathrooms -->
              <div>
                <h5>Bathrooms</h5>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    None
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    2
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    3
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    4
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    5 and above
                  </label>
                </div>
              </div>
              <!-- Number of Bathrooms End -->
            </div>

            <!-- Furnished Selector -->
            <div class="my-3">
              <h5>Furnished</h5>
              <select class="form-select">
                <option value="izmir">All</option>
                <option value="izmir">Yes</option>
                <option value="izmir">No</option>
              </select>
            </div>
            <!-- Furnished Selector End -->

            <!-- Elevator Selector -->
            <div class="my-3">
              <h5>Elevator</h5>
              <select class="form-select my-2">
                <option value="izmir">All</option>
                <option value="bornova">Yes</option>
                <option value="izmir">No</option>
              </select>
            </div>
            <!-- Elevator Selector -->

            <!-- Balcony Selector -->
            <div class="my-3">
              <h5>Balcony</h5>
              <select class="form-select">
                <option value="izmir">All</option>
                <option value="izmir">Yes</option>
                <option value="izmir">No</option>
              </select>
            </div>
            <!-- Balcony Selector End -->

            <!-- On Housing Estate Selector -->
            <div class="my-3">
              <h5>On Housing Estate</h5>
              <select class="form-select my-2">
                <option value="izmir">All</option>
                <option value="bornova">Yes</option>
                <option value="izmir">No</option>
              </select>
            </div>
            <!-- On Housing Estate Selector End -->

            <div class="d-flex justify-content-between my-3">
              <!-- Building Ages -->
              <div>
                <h5>Building Age</h5>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    New Building
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    1-5
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    6-10
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    11-16
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    16-20
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    21 and above
                  </label>
                </div>
              </div>
              <!-- Building Ages End -->

              <!-- Number of Floors -->
              <div>
                <h5>Floor</h5>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Ground Floor
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    1
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    2
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    3
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    4
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    5 and above
                  </label>
                </div>
              </div>
              <!-- Number of Floors End -->
            </div>

            <!-- Search and Reset Buttons -->
            <div
              class="search-area sticky-bottom d-flex justify-content-between w-100 border-top py-2 bg-white"
            >
              <button type="submit" class="btn btn-danger w-50 me-2">
                Search
              </button>
              <button type="reset" class="btn btn-outline-danger bg-white w-50">
                Reset
              </button>
            </div>
            <!-- Search and Reset Buttons End -->
          </form>
        </div>

        <!-- Search Results -->
        <div class="col-lg-9 col-md-8 col-sm-7 border my-3">
          <!-- Number of Results and Sort Selector -->
          <div
            class="p-3 d-flex justify-content-between align-items-center border-bottom flex-column flex-md-row"
          >
            <p class="fs-light fs-4">We got 100212 result for Istanbul</p>
            <select name="sort" class="form-select w-25 sort">
              <option value="newest">Newest</option>
              <option value="lowest">Lowest Price</option>
              <option value="highest">Highest Price</option>
            </select>
          </div>
          <!-- Number of Results and Sort Selector End -->

          <!-- Results -->
          <div class="houses">

            <!-- House Card -->
            <a href="#" class="text-decoration-none text-dark">
              <div class="house-card border-bottom">
                <div class="row px-2">
                  <div class="col-lg-4 p-2">
                    <img
                      class="w-100"
                      src="https://hecdn01.hemlak.com/mncropresize/280/210/ds01/7/5/9/4/7/0/9/3/83b1954f-973c-4227-9cd5-27cf7d268823.jpg"
                      alt=""
                    />
                  </div>
                  <div class="col-lg-8 p-2 lh-sm">
                    <div class="d-flex justify-content-between">
                      <p class="fs-4 fw-bold">1.250.000 TL</p>
                      <p class="fs-5 text-muted">20.08.2022</p>
                    </div>
                    <p class="fs-5 fw-semibold">
                      Etiler genç binada asansörlü otoparklı 1+1
                    </p>
                    <p class="fs-5">on Sale | 1+1 | 80m² | Age 10 | 2. Floor</p>
                    <p class="fs-6 text-muted">
                      <i class="fa-solid fa-location-dot"></i> Etiler / Istanbul
                    </p>
                  </div>
                </div>
              </div>
            </a>
            <!-- House Card End -->

          </div>
          <!-- Results End -->

        </div>
        <!-- Search Results End -->
      </div>
    </div>
    <%- include('./layouts/footer') %>
  </body>
</html>
